pipeline {
    agent any
    tools {
        maven 'localMaven'
    }
    environment {
        JAVA_HOME = 'C:\\Program Files\\Java\\jdk1.8.0_181\\'
    }
    stages{
        stage('Build'){
            steps {
                bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage ('Deploy to Staging'){
            steps {
                build job: 'deploy-to-tomcat-staging'
            }
        }
    }
}
